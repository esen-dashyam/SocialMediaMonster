@model IEnumerable<SocialMonster.Models.FbPost>
@{
    ViewBag.Title = "GetFbPosts";
}
<div class="table-responsive mb-2">
    <table id="ListPost" class="table table-striped">
        <thead class="bg-info text-white">
            <tr>
                <th class="border-top-0">Сонгох</th>
                <th class="border-top-0">Хэрэглэгч</th>
                <th class="border-top-0">Зураг</th>
                <th class="border-top-0">Текст</th>
                <th class="border-top-0">Огноо</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td class="text-truncate"><input type="checkbox" /></td>
                    <td class="text-truncate">@post.FromName</td>
                    <td class="text-truncate"></td>
                    <td>@post.Message</td>
                    <td class="text-truncate">@post.UpdateTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>

