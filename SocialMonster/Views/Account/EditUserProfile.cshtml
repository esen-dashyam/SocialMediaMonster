<script>
    var main_cropper = $('#main-cropper').croppie({
            viewport: { width: 260, height: 260 },
            boundary: { width: 300, height: 300 },
            // showZoomer: true,
            url: 'assets/images/users/blank.PNG',
    });

    function readFile(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#main-cropper').croppie('bind', {
                    url: e.target.result
                });
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
    $('#btn_image_select input').on('change', function () { readFile(this); });
    $.ajaxSetup({
        headers: {
            'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
        }
    });
    $('#btn_image_save').on('click', function() {
        $("#btn_image_save").attr("disabled", true);
        $('#btn_image_save').html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Уншиж байна');
        main_cropper.croppie('result',{
            type: 'canvas',
            size: 'original',
        }).then(function(response){
        $.ajax({
            url:"{{route('profile-image-upload')}}",
            type: "POST",
            dataType: 'json',
            data:{"image": response},
            success:function(data)
                {
                    location.reload();
                }
            });
        })
    });

</script>

