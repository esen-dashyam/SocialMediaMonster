@{
    Layout = null;
}
<link href="~/Content/comment.css" rel="stylesheet">
@if (ViewBag.comments != null)
{
<div class="container-fluid">
    @foreach (var post in ViewBag.Comments)
    {
        <div class="card text-white" id="single" style="background-color:#f2f3f4; padding:5px 5px 5px 5px;">
            <p style="color:black; font-size:small; font-weight:bold" >
                @post.FromName
            </p>
            <div style="text-align:justify;">
                <a href="https://www.facebook.com/@post.CommentID" target="_blank" style="color:black; font-size:small">@post.Message</a>
            </div>
        </div>
     }
</div>
        <h6 class="ff-label-wrapper" style="position:absolute; top:-55px; font-family:sans-serif; font-weight:600; right:10px; margin:7% 0 0 7%; z-index:2; line-height:1.2em; padding:0; font-size:0.750em; color:#000; border:0; ">
            <i class="ff-icon ff-label-page_timeline" style="border-color:white; width:auto; height:auto; border:none; font-family:inherit; border-radius:50%; display:inline-block">
                <i class="ff-icon-inner" style="margin-bottom:0; background-color:#3b5998; position:relative; width:auto; height:auto; padding:3px 5px; border-radius:3px; font-size:10px; color:white; letter-spacing:1px; text-transform:uppercase; font-family:inherit; line-height:18px;">
                    <span class="ff-label-text" style="margin-bottom:0">facebook</span>
                </i>
            </i>
        </h6>
    }
