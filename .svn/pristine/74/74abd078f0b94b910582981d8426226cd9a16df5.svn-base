
@using SocialMonster.Models
@model LoginViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>BOARD.MN - НЭВТРЭХ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    @*<link rel="apple-touch-icon" sizes="180x180" href="~/Content/app-assets/images/logo/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="~/Content/app-assets/images/logo/favicon-32x32.png">*@
    <!-- <link rel="shortcut icon" href="assets/images/favicon.ico"> -->
    <!-- App css -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/css/app.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="account-body accountbg" style="background-color: #Fff">

    <!-- Log In page -->
    <div class="container">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-group", role = "form" }))
        {
            @Html.AntiForgeryToken()
@*            @Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
            <div class="row vh-100 d-flex justify-content-center">
                <div class="col-12 align-self-center">
                    <div class="row">
                        <div class="col-lg-5 mx-auto">
                            <div class="card">
                                <div class="card-body p-0 auth-header-box bg-white">
                                    <div class="text-center p-3">
                                        <a href="#" class="logo logo-admin">
                                            <img src="~/Content/Images/logo-board-medium.png" height="50" alt="logo" class="auth-logo">
                                        </a>

                                        <p class="text-muted  mb-0">Хэрэглэгчийн нэвтрэх хэсэг.</p>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                 
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">

                                            <form class="form-horizontal auth-form" action="index.html">

                                                <div class="form-group mb-2">

                                                    <label class="form-label" for="username">Имэйл</label>
                                                    <div class="input-group">
                                                        <!-- <input type="text" class="form-control" name="username" id="username" placeholder="Enter username"> -->
                                                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Имэйл", @class = "form-control", @id = "login" })
                                                    </div>
                                                </div><!--end form-group-->

                                                <div class="form-group mb-2">
                                                    <label class="form-label" for="userpassword">Нууц үг</label>
                                                    <div class="input-group">
                                                        <!--  <input type="password" class="form-control" name="password" id="userpassword" placeholder="Enter password"> -->
                                                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Нууц үгээ оруулна уу", @class = "form-control", @id = "password" })
                                                    </div>
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                </div><!--end form-group-->

                                                <div class="form-group row my-3">
                                                    <div class="col-sm-6">
                                                        <div class="custom-control custom-switch switch-success">
                                                            <!--  <input type="checkbox" class="custom-control-input" id="customSwitchSuccess"> -->
                                                            @Html.CheckBoxFor(m => m.RememberMe)
                                                            @Html.Label("Сануулах")
                                                            <!--  <label class="form-label text-muted" for="customSwitchSuccess">Remember me</label> -->
                                                        </div>
                                                    </div><!--end col-->
                                                    <div class="col-sm-6 text-end">
                                                        <div id=col-sm-6 text-end">
                                                            <a class="underlineHover" href="#">Нууц үгээ мартсан уу?</a>
                                                        </div>
                                                        <!--  <a href="auth-recover-pw.html" class="text-muted font-13"><i class="dripicons-lock"></i> Forgot password?</a> -->
                                                    </div><!--end col-->
                                                </div><!--end form-group-->

                                                <div class="form-group mb-0 row">
                                                    <div class="col-12">
                                                        <input type="submit" class="btn btn-primary w-100 waves-effect waves-light" style="box-shadow:0px 3px 1px -2px rgba(0, 0, 0, 0.2),0px 2px 2px 0px rgba(0, 0, 0, 0.14),0px 1px 5px 0px rgba(0,0,0,.12)" id="btn-login" value="Нэвтрэх">

                                                        <!-- <button class="btn btn-primary w-100 waves-effect waves-light" type="button">Log In <i class="fas fa-sign-in-alt ms-1"></i></button> -->
                                                    </div><!--end col-->
                                                    <div class="col mt-1 pt-4">
                                                        <div class="alert text-muted" style="background-color: #F6F4F1">Лавлаж тодруулах зүйл байвал <br /> ажлын цагаар 77660009 утсанд холбогдоно уу!</div>
                                                    </div>
                                                </div> <!--end form-group-->
                                            </form><!--end form-->

                                        </div>

                                    </div>
                                </div><!--end card-body-->
                                <div class="card-body bg-light-alt text-center">
                                    <span class="text-muted d-none d-sm-inline-block">
                                        Юу Эн Ай Ти ХХК ©
                                        <script>
                                            document.write(new Date().getFullYear())
                                        </script>
                                    </span>
                                    <div>
                                        <span class="text-center text-muted d-none d-sm-inline-block ">VERSION 3.0.2</span>
                                    </div>
                                </div>
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end col-->
            </div><!--end row-->
        }
    </div><!--end container-->
    <!-- End Log In page -->
    <!-- jQuery  -->
    <script src="~/Content/assets/js/jquery.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/js/waves.js"></script>
    <script src="~/Content/assets/js/feather.min.js"></script>
    <script src="~/Content/assets/js/simplebar.min.js"></script>


</body>

</html>

<script>
    const loginErrorMsg = document.getElementById("login-error-msg");
    $(document).ready(function () {
        $("#btn-login").on("click", function () {
            $.getJSON('https://ipapi.co/json/', function (data) {
                var login = document.getElementById("login").value;
                var pass = document.getElementById("password").value;
                //alert(pass);
                //alert(login);
                $.ajax({
                    type: "POST",
                    url: '/Users/checkUserInfo',
                    data: { 'login': login, 'password': pass, 'ip': data.ip, 'country': data.country_name, 'region': data.region, 'city': data.city, 'ISP': data.org, 'latitude': data.latitude, 'longitude': data.longitude },
                    success: function (data) {
                    },

                });
            });
        });
    });
</script>
