@model IEnumerable<SocialMonster.Models.LargeTextModels>
    <div class="table-responsive mb-2">
        <table class="table">
            <thead>
                <tr>
                    <th class="border-top-0">Үг</th>
                    <th class="border-top-0">Тоо</th>
                    <th class="border-top-0"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var word in Model)
                {
                    <tr>
                        <td class="text-justify"><strong>@word.word</strong></td>
                        <td class="text-truncate">@word.count</td>
                        <td class="text-truncate"><a class="btn btn-sm btn-danger text-white" href="#"><i class="fa fa-cog"></i> Агуулга</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>